{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Asia/Tokyo",
  "packageRules": [
    {
      "matchUpdateTypes": "patch",
      "automerge": true
    },
    {
      "matchPackageNames": ["boto3"],
      "schedule": ["monthly"]
    }
  ],
  "npm": {
    "packageRules": [
      {
        "extends": ["monorepo:sentry-javascript"],
        "matchUpdateTypes": ["minor", "patch"],
        "groupName": "sentry-javascript minor and patch updates",
        "automerge": true
      },
      {
        "matchSourceUrls": "https://github.com/withastro/astro",
        "matchUpdateTypes": ["minor", "patch"],
        "groupName": "astro monorepo",
        "automerge": true
      },
      {
        "matchDepTypes": ["devDependencies"],
        "matchUpdateTypes": ["minor", "patch"],
        "automerge": true
      },
      {
        "matchPackageNames": ["pnpm"],
        "matchUpdateTypes": ["minor", "patch"],
        "automerge": true
      }
    ]
  },
  "regex": {
    "packageRules": [
      {
        "matchDepNames": ["node"],
        "matchUpdateTypes": ["minor", "patch"],
        "automerge": true,
        "minimumReleaseAge": "1 day"
      },
      {
        "matchPackageNames": ["pnpm"],
        "matchUpdateTypes": ["minor", "patch"],
        "automerge": true
      }
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": "^\\.github\\/workflows\\/.*\\.yml$",
      "matchStrings": [
        "node-version: \"(?<currentValue>.+)\"",
        "node-version: (?<currentValue>.+)"
      ],
      "depNameTemplate": "node",
      "packageNameTemplate": "nodejs/node",
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "node"
    },
    {
      "customType": "regex",
      "fileMatch": "^\\.github\\/workflows\\/.*\\.yml$",
      "matchStrings": [
        "pnpm-version: \"(?<currentValue>.+)\"",
        "pnpm-version: (?<currentValue>.+)"
      ],
      "depNameTemplate": "pnpm",
      "datasourceTemplate": "npm"
    },
    {
      "customType": "regex",
      "fileMatch": "^\\.github\\/workflows\\/.*\\.yml$",
      "matchStrings": [
        "terraform-version: \"(?<currentValue>.+)\"",
        "terraform-version: (?<currentValue>.+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "hashicorp/terraform",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "fileMatch": "^\\.github\\/workflows\\/.*\\.yml$",
      "matchStrings": ["python-version: \"(?<currentValue>.+)\""],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "python/cpython",
      "extractVersionTemplate": "^v(?<version>\\d+\\.\\d+\\.\\d+)$"
    }
  ],
  "terraform": {
    "schedule": ["after 2am on saturday"],
    "packageRules": [
      {
        "matchUpdateTypes": ["minor", "patch"],
        "automerge": true
      }
    ]
  }
}

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Asia/Tokyo",
  "packageRules": [
    {
      "matchUpdateTypes": "patch",
      "automerge": true
    },
    {
      "matchPackageNames": ["aws-sdk"],
      "schedule": ["monthly"]
    }
  ],
  "npm": {
    "packageRules": [
      {
        "extends": ["packages:eslint"],
        "matchUpdateTypes": ["minor", "patch"],
        "groupName": "eslint minor and patch updates",
        "automerge": true
      },
      {
        "extends": ["monorepo:sentry-javascript"],
        "matchUpdateTypes": ["minor", "patch"],
        "groupName": "sentry-javascript minor and patch updates",
        "automerge": true
      },
      {
        "matchSourceUrls": "https://github.com/withastro/astro",
        "matchUpdateTypes": ["minor", "patch"],
        "groupName": "astro monorepo",
        "automerge": true
      },
      {
        "matchDepTypes": ["devDependencies"],
        "matchUpdateTypes": ["minor", "patch"],
        "automerge": true
      },
      {
        "matchPackageNames": ["pnpm"],
        "matchUpdateTypes": ["minor", "patch"],
        "automerge": true
      }
    ]
  },
  "regex": {
    "packageRules": [
      {
        "matchDepNames": ["node"],
        "matchUpdateTypes": ["minor", "patch"],
        "automerge": true
      }
    ]
  },
  "regexManagers": [
    {
      "fileMatch": "^\\.github\\/workflows\\/.*\\.yml$",
      "matchStrings": [
        "node-version: \"(?<currentValue>.+)\"",
        "node-version: (?<currentValue>.+)"
      ],
      "depNameTemplate": "node",
      "lookupNameTemplate": "nodejs/node",
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "node"
    },
    {
      "fileMatch": "^\\.github\\/workflows\\/.*\\.yml$",
      "matchStrings": [
        "terraform-version: \"(?<currentValue>.+)\"",
        "terraform-version: (?<currentValue>.+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "hashicorp/terraform",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "fileMatch": "^\\.github\\/workflows\\/.*\\.yml$",
      "matchStrings": [
        "python-version: \"(?<currentValue>.+)\"",
        "python-version: (?<currentValue>.+)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "python/cpython",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ],
  "terraform": {
    "schedule": ["after 2am every saturday"],
    "packageRules": [
      {
        "matchUpdateTypes": ["minor", "patch"],
        "automerge": true
      }
    ]
  },
  "minor": {
    "schedule": ["every weekend"]
  },
  "major": {
    "dependencyDashboardApproval": true
  }
}
